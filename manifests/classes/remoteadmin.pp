# add a remote admin user
class remoteadmin {
	user { 'remote':
	#	provider => "directoryservice",
		comment => 'remote admin',
		ensure => 'present',
		home => '/var/home/remote',
		gid => '20',
		uid => '5050',
		password => '',
		shell => '/bin/bash';
	}
	exec { hideuser:
	  require => User["remote"],
	  command => "/usr/bin/defaults write /Library/Preferences/com.apple.loginwindow HiddenUsersList -array remote",
	}
}